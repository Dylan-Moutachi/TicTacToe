<div class="container mt-5">
  <h1 class="text-center mb-4">Bienvenue dans le Tic Tac Toe !</h1>

  <div class="text-center mb-4">
    <%= link_to 'Créer une nouvelle partie', new_game_path, class: 'btn btn-primary btn-lg' %>
  </div>

  <h2 class="text-center mb-4">Historique des parties</h2>

  <% if @games.any? %>
    <div class="row">
      <% @games.each do |game| %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">Partie <%= game.id %></h5>
              <p class="card-text">
                Statut : <%= game.status == 'in_progress' ? 'En cours' : 'Terminée' %><br>
                Difficulté : <strong><%= game.difficulty.capitalize %></strong>
              </p>
              <div class="text-center">
                <%= link_to 'Voir la partie', game_path(game), class: 'btn btn-info' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-warning text-center">
      Aucune partie en cours. Créez-en une nouvelle !
    </div>
  <% end %>
</div>

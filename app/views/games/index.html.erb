<!-- app/views/games/index.html.erb -->

<h1>Bienvenue dans le Tic Tac Toe !</h1>

<p><%= link_to 'Créer une nouvelle partie', new_game_path, class: 'btn btn-primary' %></p>

<h2>Parties en cours</h2>
<% if @games.any? %>
  <ul>
    <% @games.each do |game| %>
      <li>
        <%= link_to "Partie ##{game.id}", game_path(game) %> -
        <%= game.status == 'in_progress' ? 'En cours' : 'Terminée' %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Aucune partie en cours. Créez-en une nouvelle !</p>
<% end %>
